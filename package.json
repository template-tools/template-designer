{
  "name": "@template-tools/template-designer",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "keywords": [
    "svelte",
    "template",
    "vite",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "node --run prepare:vite",
    "prepare:vite": "vite build",
    "start": "vite",
    "test": "node --run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*-cafe.mjs --esm -s build/test --page-request-timeout 5000 --app-init-delay 8000 --app vite",
    "lint": "node --run lint:css",
    "lint:css": "stylelint ./src**/*.css",
    "preview": "vite preview"
  },
  "dependencies": {
    "aggregation-repository-provider": "^7.0.5",
    "bitbucket-repository-provider": "^6.0.30",
    "content-entry": "^12.0.4",
    "gitea-repository-provider": "^4.2.5",
    "github-repository-provider": "^9.1.0",
    "mf-styling": "^3.2.12",
    "repository-provider": "^35.3.1",
    "svelte-common": "^6.19.2",
    "svelte-guard-history-router": "^6.1.2",
    "svelte-repository-provider": "^2.0.34",
    "svelte-session-manager": "^3.0.39"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/github": "^11.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "npm-pkgbuild": "^18.1.2",
    "semantic-release": "^24.2.3",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0",
    "svelte": "^5.28.2",
    "testcafe": "^3.7.2",
    "vite": "^6.3.5"
  },
  "optionalDependencies": {
    "mf-hosting-cloudflare": "^1.0.8",
    "mf-hosting-frontend": "^3.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/template-tools/template-designer.git"
  },
  "bugs": {
    "url": "https://github.com/template-tools/template-designer/issues"
  },
  "homepage": "https://github.com/template-tools/template-designer#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": "build/"
    },
    "frontend": true,
    "install.dir": "${install.base.dir}${name}/frontend/"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-cloudflare",
      "arlac77/template-svelte-app",
      "arlac77/template-testcafe"
    ]
  }
}
