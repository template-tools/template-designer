{
  "name": "component-template-designer",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "svelte",
    "template",
    "web"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "rollup -c rollup.config.mjs && rollup -c",
    "start": "rollup -c -w rollup.config.mjs && rollup -c -w",
    "test": "npm run test:cafe",
    "test:cafe": "testcafe $BROWSER:headless tests/cafe/*.js -s build/test --app-init-delay 5000 --app \"rollup -c  -w\"",
    "lint": "npm run lint:css",
    "lint:css": "stylelint ./src/*.css",
    "build": "rollup -c rollup.config.mjs"
  },
  "dependencies": {
    "aggregation-repository-provider": "^5.3.0",
    "bitbucket-repository-provider": "^4.4.1",
    "buffer": "^6.0.1",
    "content-entry": "^5.2.7",
    "gitea-repository-provider": "^2.4.1",
    "github-repository-provider": "^7.33.0",
    "mf-styling": "^1.7.23",
    "repository-provider": "^32.2.0",
    "svelte-common": "^4.19.7",
    "svelte-guard-history-router": "^5.5.0",
    "svelte-repository-provider": "^1.7.68",
    "svelte-session-manager": "^2.0.11"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-inject": "^4.0.4",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-virtual": "^2.1.0",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "npm-pkgbuild": "^10.15.1",
    "postcss": "^8.4.16",
    "postcss-import": "^15.0.0",
    "rollup": "^2.79.1",
    "rollup-plugin-consts": "^1.1.0",
    "rollup-plugin-dev": "^2.0.4",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "semantic-release": "^19.0.5",
    "stylelint": "^14.13.0",
    "stylelint-config-standard": "^28.0.0",
    "svelte": "^3.50.1",
    "testcafe": "^2.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/component-template-designer.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/component-template-designer/issues"
  },
  "homepage": "https://github.com/arlac77/component-template-designer#readme",
  "config": {
    "api": "/services/component-template-designer/api",
    "base": "/services/component-template-designer",
    "proxyTarget": "https://somewhere/",
    "title": "Component Template Designer"
  },
  "pkgbuild": {
    "content": {
      "${install.dir}": {
        "base": "public"
      },
      "${nginx.sites.dir}${name}.conf": "pkg/nginx.conf"
    },
    "hooks": "pkg/hooks.sh",
    "install.dir": "${install.base.dir}${name}/frontend/"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "properties": {
      "testcafe": {
        "options": "--app-init-delay 5000"
      },
      "netlifly": {
        "site": {
          "uuid": "e6da37be-57f8-40d4-bf85-07ad688a73b1"
        }
      }
    },
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-cloudflare",
      "arlac77/template-svelte-app",
      "arlac77/template-testcafe"
    ]
  }
}
